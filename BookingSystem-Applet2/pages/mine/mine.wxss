.userinfo {
    height: 250rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: rgb(65, 38, 38);
    background-color: #00b8f6;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;

  }
  .userinfo-avatar image{
    width: 100%;
    height: 100%;
  }
  button{
    font-size: 35rpx;
    text-align: left;
    margin-bottom: 10rpx;
  }
  button::after {
    border: none;
  }
